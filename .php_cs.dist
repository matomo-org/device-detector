<?php

$finder = PhpCsFixer\Finder::create()
    ->notPath('misc/statistics.php')
    ->exclude('regexes')
    ->exclude('Tests')
    ->in(__DIR__)
;

return PhpCsFixer\Config::create()
    ->setRules([
        '@PSR2' => true,
        'array_syntax' => ['syntax' => 'long'],
    ])
    ->setFinder($finder)
;
